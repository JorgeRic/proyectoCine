<h1>Modificar pelicula</h1>

    <h3>Titulo: {{titulo}}</h3>
    <p>Director: {{director}}</p>
    <p>Actores: {{actores}}</p>
    <p>Genero: {{genero}}</p>
    <p>Año: {{anio}}</p>


<form action="/peliculas/{{id}}" method="POST">
  <label>Titulo:</label>
    <input type="text" name="titulo" value="{{titulo}}">
  <label>Director:</label>
    <input type="text" name="director" value="{{director}}">
  <label>Actores:</label>
    <input type="text" name="actores" value="{{actores}}">
  <label>Año:</label>
    <input type="number" name="anio" value="{{anio}}">
  <label>Genero:</label>
    <select name="genero" required>
      <option value="">Elegir</option>
      <option value="comedia">Comedia</option>
      <option value="drama">Drama</option>
      <option value="ciencia-ficcion">Ciencia-ficcion</option>
      <option value="historica">Historica</option>
      <option value="aventura">Aventura</option>
      <option value="terror">Terror</option>
      
    </select>
<button type="submit">Modificar datos</button>

</form>
<a href="/peliculas"><button>Volver al listado de peliculas</button></a>