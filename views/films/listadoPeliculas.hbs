<h2 class="title">Lista de peliculas</h2>

<form action="/peliculas/search" method="GET"> 
  <div class="buscar">
    <label for="titulo">Buscar pelicula</label>
    <input type="text" name="titulo" id="titulo" placeholder="buscar por titulo" class="input">
    <button type="submit" class="button-nav">Buscar</button>
  </div>
</form>
<ul class="container">
{{#each peliculas}}
  <article class="article-private">
    <li>
      <h3 class="titulo">Titulo: {{titulo}}</h3>
      <img src ="{{image}}" alt="{{titulo}}" class="fotos">
<a href="/peliculas/detail/{{_id}}"><button type="submit" class="verDatos">Ver datos</button></a>
  </li>
  </article>
  {{/each}}
</ul>
<div class="centrar">
<a href="/"><button  class="button-index">Volver a pagina principal</button></a>
</div>