<h2 class="title">Lista de artistas</h2>

<form action="/actores/search" method="GET">
  <div class="buscar">
    <label for="nombre">Buscar actor</label>
    <input type="text" name="nombre" id="nombre" placeholder="buscar por nombre" class="input">
  <button type="submit" class="button-nav">Buscar</button>
</div>
</form>
<ul class="container">
  {{#each listaActores}}
  <article class="article-private">
    <li>
      <h3 class="titulo">Nombre: {{nombre}}</h3>
      <img src="{{image}}" alt="{{nombre}}" class="fotos"></img>
<a href="/actores/about/{{_id}}"><button type="submit" class="verDatos">Ver datos</button></a>
    </li>
  </article>
  {{/each}}
</ul>
<div class="centrar">
<a href="/"><button class="button-index">Volver a pagina principal</button></a>
</div>
