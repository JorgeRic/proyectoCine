
<form action='/auth/login' method="POST">
  <div class="login">
      <label for="username">Username</label>
    {{#if formData.length}}
      <input type="text" name="username" id="username" value="{{formData.[0]}}" placeholder="username">
    {{else}}
      <input type="text" name="username" id="username" placeholder="username" class="input">
    {{/if}}
    <label for="password">Password</label>
      <input type="text" name="password" id="password" placeholder="password"class="input">
      <button type="submit" class="verDatos">Login</button>
  </div>
</form>
{{#if messages.length}}
<ul class="validation">
  {{#each messages}}
  <li>
    {{this}}
  </li>
  {{/each}}
</ul>
{{/if}}

<div class="centrar">
<a href="/"><button class="button-index">Volver a pagina principal</button></a>
</div>